{
	"name": "AMR-Front-end",
	"description": "Integration of an AMR project",
	"author": "wenyue you",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build && node util/breakUp/jsCopy.js && node util/breakUp/cssCopy.js && node util/breakUp/copyFonts.js && node util/breakUp/copyStatic.js && node util/breakUp/copyImg.js",
		"all-build": "vue-cli-service build",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"core-js": "^2.6.5",
		"element-ui": "^2.12.0",
		"git-rev-sync": "^2.0.0",
		"js-cookie": "^2.2.1",
		"js-sha256": "^0.9.0",
		"jsbarcode": "^3.11.0",
		"postcss-px2rem-exclude": "0.0.6",
		"vue": "^2.6.10",
		"vue-i18n": "^8.15.3",
		"vue-router": "^3.0.3",
		"vuex": "^3.0.1"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.7.4",
		"@vue/cli-plugin-babel": "^3.11.0",
		"@vue/cli-plugin-eslint": "^3.11.0",
		"@vue/cli-service": "^5.0.8",
		"babel-eslint": "^10.0.1",
		"babel-plugin-component": "^1.1.1",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"node-sass": "^4.9.0",
		"sass-loader": "^7.1.0",
		"vue-template-compiler": "^2.6.10",
		"webpack-cli": "^3.3.12"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {
			"no-console": "off",
			"indent": [
				"error",
				4
			],
			"no-unused-vars": [
				2,
				{
					"vars": "local",
					"args": "none"
				}
			],
			"no-undef": 0
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {},
			"postcss-px2rem-exclude": {
				"remUnit": 100,
				"exclude": "/node_modules|floder_name/i"
			}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
